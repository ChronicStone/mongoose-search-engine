

{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "incremental": true,
    "noImplicitAny": false,
    "noLib": false,
    "target": "es6",
    "outDir": "./dist",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#lib": [
        "lib"
      ],
    }
  }
}